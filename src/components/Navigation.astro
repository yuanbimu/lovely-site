---
const navItems = [
  { label: '首页', href: '/' },
  { label: '关于', href: '/about' },
  { label: '文章', href: '/articles' },
  { label: '动态', href: '/dynamics' },
  { label: '橱窗', href: '/showcase' },
  { label: '链接', href: '/links' },
];
---

<header class="glass-nav">
  <nav class="nav-content">
    {navItems.slice(0, 3).map(item => (
      <a href={item.href} class="nav-link">{item.label}</a>
    ))}

    <a href="/" class="logo-wrapper">
      <img src="/images/Logo.jpg" alt="Lovely Logo" class="logo-img" width="120" height="60" loading="eager" decoding="async" onerror="this.style.display='none';this.parentElement.innerHTML='<span style=\'font-size:20px;font-weight:700;color:#6B5637;\'>Lovely</span>'" />
    </a>

    {navItems.slice(3).map(item => (
      <a href={item.href} class="nav-link">{item.label}</a>
    ))}
  </nav>
</header>

<style>
  .glass-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(196, 167, 125, 0.2);
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    height: 70px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
    flex-wrap: wrap;
  }

  .nav-link {
    padding: 10px 18px;
    color: #6B5637;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 500;
    font-size: 14px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    background: rgba(255, 255, 255, 0.6);
    color: #4A90D9;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 15px;
  }

  .logo-img {
    height: 60px;
    width: auto;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .logo-img:hover {
    transform: scale(1.05);
  }

  @media (max-width: 900px) {
    .nav-content {
      gap: 10px;
      padding: 0 20px;
    }

    .nav-link {
      padding: 8px 12px;
      font-size: 13px;
    }

    .logo-img {
      height: 32px;
    }
  }

  @media (max-width: 600px) {
    .nav-content {
      height: 60px;
      gap: 8px;
    }

    .nav-link {
      padding: 6px 10px;
      font-size: 12px;
    }

    .logo-img {
      height: 28px;
    }
  }
</style>
