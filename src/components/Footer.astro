<style>
  .site-footer {
    position: relative;
    background: linear-gradient(180deg, #F5EDE3 0%, #FAF6F0 50%, #FFF8F0 100%);
    border-top: 1px solid rgba(196, 167, 125, 0.2);
    padding: 70px 20px 40px;
    overflow: hidden;
  }

  .footer-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .deco-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
  }

  .deco-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #E8D4C0 0%, #C4A77D 100%);
    top: -100px;
    left: -100px;
  }

  .deco-2 {
    width: 350px;
    height: 350px;
    background: linear-gradient(135deg, #D6EBF8 0%, #B3D9F2 100%);
    bottom: -100px;
    right: -100px;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 50px;
    margin-bottom: 50px;
  }

  .footer-brand {
    padding-right: 30px;
  }

  .footer-logo {
    font-size: 26px;
    font-weight: 700;
    color: #6B5637;
    margin-bottom: 18px;
    letter-spacing: 2px;
  }

  .footer-desc {
    color: #8B6F47;
    font-size: 15px;
    line-height: 1.8;
    margin: 0 0 15px 0;
  }

  .license-text {
    color: #8B6F47;
    font-size: 13px;
    opacity: 0.7;
    line-height: 1.7;
  }

  .license-text a {
    color: #6B5637;
    text-decoration: none;
  }

  .license-text a:hover {
    text-decoration: underline;
  }

  .footer-links h4 {
    font-size: 16px;
    font-weight: 600;
    color: #6B5637;
    margin: 0 0 18px 0;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(196, 167, 125, 0.3);
    display: inline-block;
  }

  .copyright {
    color: #8B6F47;
    font-size: 14px;
    margin: 0 0 12px 0;
  }

  .icp-link {
    display: inline-block;
    color: #6B5637;
    font-size: 13px;
    text-decoration: none;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  .icp-link:hover {
    background: rgba(255, 255, 255, 0.8);
    transform: translateY(-2px);
  }

  .footer-colors h4 {
    font-size: 16px;
    font-weight: 600;
    color: #6B5637;
    margin: 0 0 18px 0;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(196, 167, 125, 0.3);
    display: inline-block;
  }

  .palette-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .color-dot-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .color-dot {
    width: 28px;
    height: 28px;
    border-radius: 8px;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .color-dot-wrapper span {
    font-size: 12px;
    color: #6B5637;
    font-family: 'SF Mono', Monaco, monospace;
    font-weight: 500;
  }

  .footer-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(196, 167, 125, 0.3), transparent);
    margin: 30px 0;
  }

  .footer-bottom {
    text-align: center;
  }

  .footer-bottom p {
    color: #8B6F47;
    font-size: 13px;
    margin: 0;
    opacity: 0.6;
  }

  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .footer-brand {
      grid-column: span 2;
      padding-right: 0;
      text-align: center;
    }
  }

  @media (max-width: 600px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 35px;
    }

    .footer-brand {
      grid-column: span 1;
    }

    .palette-grid {
      justify-content: center;
    }

    .color-dot-wrapper {
      justify-content: center;
    }
  }
</style>
