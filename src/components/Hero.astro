---
import siteData from '../data/site-data.json';

const { profile, stats, liveStatus, config } = siteData;
---

<section id="hero" class="hero-section">
  <div class="bg-orb orb-1"></div>
  <div class="bg-orb orb-2"></div>

  <div class="container-cute fade-in-up">
    <div class="avatar-wrapper">
      <img src={profile.avatar} alt={profile.name} class="avatar" onerror="this.src='https://placehold.co/400x400/C4A77D/FFFFFF?text=Lovely'" />
    </div>

    <h1 class="site-title">{profile.name}</h1>
    <p class="subtitle">{profile.bio}</p>

    {config.showFansCount && (
      <div class="main-socials">
        <div class="social-pill">
          <span class="platform-label">B站</span>
          <span class="fans-count">{stats.fans > 0 ? `${(stats.fans / 10000).toFixed(1)}w` : '--'}</span>
          <span class="label">粉丝</span>
        </div>
      </div>
    )}

    <div class="social-buttons">
      <a href={profile.socials.bilibili} target="_blank" class="social-btn bilibili">
        <svg viewBox="0 0 512 512" width="24" height="24" fill="#00aeec">
          <path fill="currentColor" d="M488.6 104.1c16.7 18.1 24.4 39.7 23.3 65.7v202.4c-.4 26.4-9.2 48.1-26.5 65.1c-17.2 17-39.1 25.9-65.5 26.7H92.02c-26.45-.8-48.21-9.8-65.28-27.2C9.682 419.4.767 396.5 0 368.2V169.8c.767-26 9.682-47.6 26.74-65.7C43.81 87.75 65.57 78.77 92.02 78h29.38L96.05 52.19c-5.75-5.73-8.63-13-8.63-21.79c0-8.8 2.88-16.06 8.63-21.797C101.8 2.868 109.1 0 117.9 0s16.1 2.868 21.9 8.603L213.1 78h88l74.5-69.397C381.7 2.868 389.2 0 398 0c8.8 0 16.1 2.868 21.9 8.603c5.7 5.737 8.6 12.997 8.6 21.797c0 8.79-2.9 16.06-8.6 21.79L394.6 78h29.3c26.4.77 48 9.75 64.7 26.1z"/>
        </svg>
        <span>B站主页</span>
      </a>

      {profile.socials.weibo && (
        <a href={profile.socials.weibo} target="_blank" class="social-btn weibo">
          <svg viewBox="0 0 512 512" width="24" height="24" fill="#E6162D">
            <path fill="currentColor" d="M407 177.6c7.6-24-13.4-46.8-37.4-41.7c-22 4.8-28.8-28.1-7.1-32.8c50.1-10.9 92.3 37.1 76.5 84.8c-6.8 21.2-38.8 10.8-32-10.3z"/>
          </svg>
          <span>微博</span>
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100px 20px 60px;
    position: relative;
    overflow: hidden;
    background: linear-gradient(180deg, #FFF8F0 0%, #F5EDE3 30%, #E8F4FC 100%);
  }

  .bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    pointer-events: none;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: #E8D4C0;
    top: -100px;
    left: -100px;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: #D6EBF8;
    bottom: -150px;
    right: -150px;
  }

  .fade-in-up {
    text-align: center;
    position: relative;
    z-index: 10;
  }

  .avatar-wrapper {
    margin-bottom: 30px;
    position: relative;
    display: inline-block;
  }

  .avatar {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 50%;
    border: 5px solid white;
    box-shadow: 0 8px 40px rgba(139, 111, 71, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .avatar:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 50px rgba(139, 111, 71, 0.25);
  }

  .site-title {
    font-size: 48px;
    font-weight: 700;
    color: #6B5637;
    margin: 0 0 12px 0;
    letter-spacing: 2px;
  }

  .subtitle {
    font-size: 18px;
    color: #8B6F47;
    margin: 0 0 30px 0;
  }

  .main-socials {
    margin-bottom: 25px;
  }

  .social-pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 12px 24px;
    border-radius: 50px;
    box-shadow: 0 4px 20px rgba(139, 111, 71, 0.1);
  }

  .platform-label {
    font-size: 16px;
    font-weight: 600;
    color: #4A90D9;
  }

  .fans-count {
    font-size: 24px;
    font-weight: 700;
    color: #6B5637;
  }

  .label {
    font-size: 14px;
    color: #8B6F47;
  }

  .social-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .social-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 24px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .social-btn.bilibili {
    background: linear-gradient(135deg, #00aeec 0%, #0090d4 100%);
    color: white;
  }

  .social-btn.weibo {
    background: linear-gradient(135deg, #E6162D 0%, #c01224 100%);
    color: white;
  }

  .social-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 80px 15px 50px;
    }

    .avatar {
      width: 140px;
      height: 140px;
    }

    .site-title {
      font-size: 32px;
    }

    .subtitle {
      font-size: 16px;
    }

    .social-buttons {
      flex-direction: column;
      align-items: center;
    }

    .social-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>
