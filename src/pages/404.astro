<style>
  .error-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #FFF8F0 0%, #F5EDE3 100%);
    padding-top: 70px;
  }

  .error-section {
    padding: 80px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 70px);
  }

  .error-content {
    text-align: center;
    max-width: 500px;
  }

  .error-icon {
    font-size: 80px;
    margin-bottom: 20px;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .error-code {
    font-size: 120px;
    font-weight: 700;
    color: #6B5637;
    margin: 0 0 10px 0;
    line-height: 1;
    background: linear-gradient(135deg, #9d84b7 0%, #6a4c93 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .error-title {
    font-size: 28px;
    color: #6B5637;
    margin: 0 0 15px 0;
  }

  .error-desc {
    font-size: 16px;
    color: #8B6F47;
    margin: 0 0 30px 0;
    line-height: 1.6;
  }

  .btn-home {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: linear-gradient(135deg, #9d84b7 0%, #6a4c93 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 16px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 6px 20px rgba(157, 132, 183, 0.3);
  }

  .btn-home:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(157, 132, 183, 0.4);
  }

  @media (max-width: 600px) {
    .error-code {
      font-size: 80px;
    }

    .error-title {
      font-size: 22px;
    }

    .error-icon {
      font-size: 60px;
    }
  }
</style>
