---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import siteData from '../data/site-data.json';

const { articles } = siteData;
---

<Layout title="文章 - 東愛璃Lovely">
  <Navigation />

  <main class="articles-page">
    <section class="articles-section">
      <div class="container-cute">
        <div class="section-header text-center">
          <span class="section-tag">Articles</span>
          <h2>符瑶的小秘密</h2>
        </div>

        {articles.length > 0 ? (
          <div class="articles-grid">
            {articles.map(article => (
              <article class="article-card">
                <div class="card-date">
                  <span class="day">{new Date(article.time).getDate().toString().padStart(2, '0')}</span>
                  <span class="month">{new Date(article.time).toLocaleDateString('zh-CN', { month: 'short', year: 'numeric' })}</span>
                </div>
                <div class="card-content">
                  <h3>{article.title || article.content.substring(0, 50)}</h3>
                  <p>{article.content.substring(0, 100)}...</p>
                  <a href="#" class="read-more">阅读全文 <span>→</span></a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <p>暂无文章</p>
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .articles-page {
    padding-top: 70px;
    min-height: 100vh;
    background: linear-gradient(180deg, #FFF8F0 0%, #F5EDE3 100%);
  }

  .articles-section {
    padding: 80px 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-tag {
    display: inline-block;
    background: linear-gradient(135deg, #9d84b7 0%, #6a4c93 100%);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    margin-bottom: 15px;
  }

  .section-header h2 {
    font-size: 36px;
    color: #6B5637;
    margin: 0;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .article-card {
    display: flex;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(139, 111, 71, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(139, 111, 71, 0.15);
  }

  .card-date {
    background: linear-gradient(135deg, #6a4c93 0%, #9d84b7 100%);
    color: white;
    padding: 20px 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
  }

  .card-date .day {
    font-size: 28px;
    font-weight: 700;
    line-height: 1;
  }

  .card-date .month {
    font-size: 12px;
    margin-top: 5px;
    opacity: 0.9;
  }

  .card-content {
    padding: 20px;
    flex: 1;
  }

  .card-content h3 {
    font-size: 18px;
    color: #6B5637;
    margin: 0 0 10px 0;
    line-height: 1.4;
  }

  .card-content p {
    font-size: 14px;
    color: #8B6F47;
    line-height: 1.6;
    margin: 0 0 15px 0;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    color: #4A90D9;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: gap 0.3s ease;
  }

  .read-more:hover {
    gap: 10px;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #8B6F47;
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 28px;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .article-card {
      flex-direction: row;
    }
  }

  @media (max-width: 480px) {
    .article-card {
      flex-direction: column;
    }

    .card-date {
      flex-direction: row;
      gap: 10px;
      padding: 15px;
    }
  }
</style>
