---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import configData from '../data/config.json';
import { getShowcaseImageUrl } from '../config/site.config';

const { showcase } = configData;
---

<Layout title="橱窗 - 東愛璃Lovely">
  <Navigation />

  <main class="showcase-page">
    <section class="showcase-section">
      <div class="container-cute">
        <div class="section-header text-center">
          <span class="section-tag">Gallery</span>
          <h2>東愛璃的衣柜</h2>
          <p class="section-desc">共 {showcase.length} 套皮肤</p>
        </div>

        {showcase.length > 0 ? (
          <div class="gallery-grid">
            {showcase.map((item) => (
              <div class="model-card">
                <div class="model-img">
                  <img
                    src={getShowcaseImageUrl(item.image)}
                    alt={item.name}
                    onerror={`this.src='https://placehold.co/400x500/C4A77D/FFFFFF?text=${encodeURIComponent(item.name)}'`}
                  />
                </div>
                <div class="model-info">
                  <h4>{item.name}</h4>
                  <p class="credit">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <p>暂无橱窗数据</p>
            <p class="hint">请在 src/data/config.json 中配置橱窗数据</p>
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .showcase-page {
    padding-top: 70px;
    min-height: 100vh;
    background: linear-gradient(180deg, #FFF8F0 0%, #F5EDE3 100%);
  }

  .showcase-section {
    padding: 80px 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-tag {
    display: inline-block;
    background: linear-gradient(135deg, #9d84b7 0%, #6a4c93 100%);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    margin-bottom: 15px;
  }

  .section-header h2 {
    font-size: 36px;
    color: #6B5637;
    margin: 0 0 10px 0;
  }

  .section-desc {
    color: #8B6F47;
    font-size: 14px;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .model-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(139, 111, 71, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .model-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(139, 111, 71, 0.2);
  }

  .model-img {
    position: relative;
    padding-top: 125%;
    overflow: hidden;
  }

  .model-img img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .model-card:hover .model-img img {
    transform: scale(1.05);
  }

  .model-info {
    padding: 20px;
  }

  .model-info h4 {
    font-size: 18px;
    color: #6B5637;
    margin: 0 0 8px 0;
  }

  .credit {
    font-size: 14px;
    color: #8B6F47;
    line-height: 1.5;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #8B6F47;
  }

  .hint {
    font-size: 14px;
    color: #8B6F47;
    opacity: 0.7;
    margin-top: 10px;
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 28px;
    }

    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
  }
</style>
